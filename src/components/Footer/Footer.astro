---
import ProductHuntLink from "../common/ProductHuntLink.astro";
---

<footer class="footer">
    <div class="footer__socialWrap">
        <ul class="footer__socialBtnList">
            <li class="footer__socialBtnItem">
                <button class="footer__phBtn only-mobile" type='button' />
                <div class="only-desktop">
                    <ProductHuntLink />
                </div>
            </li>
            <li class="footer__socialBtnItem">
                <button class="footer__appstore" type='button' />
            </li>
        </ul>

        <div class="only-desktop">
            <ul class="footer__socialLinksList">
                <li>
                    <a class="footer__link link--twitter" href="https://www.twitter.com" target="_blank"></a>
                </li>
                <li>
                    <a class="footer__link link--inst" href="https://www.instagram.com" target="_blank"></a>
                </li>
            </ul>
        </div>
    </div>

    <div class="footer__copyrightBlock">
        <p class="footer__copyright">&#169; 2023, Kitchen Gnome</p>
        <ul class="footer__socialLinksList only-mobile">
            <li>
                <a class="footer__link link--twitter" href="https://www.twitter.com" target="_blank"></a>
            </li>
            <li>
                <a class="footer__link link--inst" href="https://www.instagram.com" target="_blank"></a>
            </li>
        </ul>
    </div>
</footer>
<style>
    .footer {
        display: flex;
        flex-direction: column;
        gap: 41px;
        padding: 0px 20px 36px;
        background-color: #040404;
    }

    @media screen and (min-width: 1440px) {
    .footer {
        padding: 0 72px 56px 64px;
        flex-direction: row-reverse;
        justify-content: space-between;
        gap: 0;
        }
    }

    @media screen and (min-width: 1440px) {
    .footer__socialWrap {
        display: flex;
        align-items: center;
        gap: 81px;
        }
    }



    .footer__socialBtnList {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 24px;
    }

    @media screen and (min-width: 1440px) {
    .footer__socialBtnList {
        gap: 16px
        }
    }

    @media screen and (min-width: 1440px) {
    .footer__socialBtnItem {
        display: flex;
        }
    }

    .footer__phBtn {
        cursor: pointer;
        width: 142px;
        height: 48px;
        border-radius: 6px;
        background-image: url("/icons/ph-mob.svg");
        background-size: contain;
        background-position: center center;
        background-repeat: no-repeat;
    }
    
    .footer__appstore {
        cursor: pointer;
        width: 143px;
        height: 48px;
        border-radius: 6px;
        background-image: url("/icons/appstore-mob.svg");
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
    }

    @media screen and (min-width: 1440px) {
    .footer__appstore {
        width: 204px;
        height: 52px;
        background-image: url("/icons/appstore-white.svg");
        }
    }

    .footer__copyrightBlock {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .footer__copyright {
        color: #fff;
        font-family: Avenir;
        font-size: 14px;
        font-style: normal;
        font-weight: 500;
        line-height: 140%;
    }

    @media screen and (min-width: 1440px) {
    .footer__copyright {
        font-size: 16px;
        }
    }

    .footer__socialLinksList {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .footer__socialLinksList {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .footer__link {
        display: block;
        width: 20px;
        height: 20px;
        background-size: auto;
        background-position: center center;
        background-repeat: no-repeat;
    }

    .link--twitter {
        background-image: url("/icons/twitter.svg");
    }
   
    .link--inst {
        background-image: url("/icons/instagram.svg");
    }
</style>
