---
import ProductHuntLink from "../common/ProductHuntLink.astro";
---

<section class="home--section">
	<div class="home--logo"></div>
	<h1 class="home--title">Kitchen Gnome</h1>
	<p class="home--description">Your Smart Culinary Guide</p>

	<a
		class="home--appstore"
		href="https://www.apple.com/app-store/"
		target="_blank"
		rel="noreferrer noopener"
		aria-label="appstore"
	>
	</a>

	<ProductHuntLink />
</section>

<style>
	.home--section {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: calc(100vh - 70px);
		overflow: hidden;
	}

	.home--logo {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 64px;
		height: 64px;
		background-image: url("/icons/logo-main.svg");
		background-size: auto;
		background-position: center center;
		background-repeat: no-repeat;
	}

	.home--title {
		font-family: Abhaya Libre;
		font-size: 36px;
		font-style: normal;
		font-weight: 700;
		line-height: normal;
		margin: 12px auto 30px;
	}

	.home--description {
		font-family: Avenir;
		font-size: 20px;
		font-style: normal;
		font-weight: 300;
		line-height: normal;
		margin: 0 auto 65px;
	}

	.home--appstore {
		width: 180px;
		height: 50px;
		border-radius: 6px;
		background-image: url("/icons/appstore.svg");
		background-size: auto;
		background-position: center center;
		background-repeat: no-repeat;
		margin: 0 0 20px 0;
	}
</style>
